{
  "compilerOptions": {
    "target": "es6",
    "module": "commonJS",
    "allowJs": true,
    "outDir": "build",
    "rootDir": ".",
    "strict": false,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true
  },
  "typeAcquisition": {
    "enable": false
  },
  "include": ["./**/*"],
  "exclude": ["./data/*", "node_modules"]
}
